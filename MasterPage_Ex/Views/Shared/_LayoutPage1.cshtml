@{
    ViewBag.Title = "Loggedin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <title>Online Shopping</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>
<body>

    <nav class="navbar navbar-expand-lg sticky-top" style="background: rgba(0,0,0,0.8);">
        <a class=" navbar-brand" href="#">
            <img style="width:40px; height:40px" src="~/Image/logo_main.jpg" />
        </a>
       
        <button class="navbar-toggler btn btn-outline-success" type="button" data-toggle="collapse" data-target="#Content" aria-controls="Content" aria-expanded="false" aria-label="Toggle navigation">
          ☰
        </button>


        <div class="collapse navbar-collapse" id="Content">
            <div class="navbar-nav mr-auto">

                <button type="button" class="btn btn-outline-success" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");">Home</button>
                <div class="btn-group">
                    <button type="button" class=" btn btn-outline-success dropdown-toggle btn-block" data-toggle="dropdown">
                        Products <span class="caret"></span>
                    </button>
                    <div class="dropdown-menu">
                        <button type="button" class=" dropdown-item btn btn-outline-success" data-toggle="dropdown">Tab</button>
                        <button type="button" class=" dropdown-item btn btn-outline-success" data-toggle="dropdown">Smartphone</button>

                    </div>


                </div>
                
                
                <button type="button" class="btn btn-outline-success" data-toggle="collapse" data-target="#demo2">About Us</button>
              
            </div>
            <form class="form-inline">
                <input class="form-control mr-1" type="search" placeholder="Search" aria-label="Search">
                
            </form>

            <div class="mr-auto">
                <button class="btn btn-outline-success btn-block " type="submit">Search</button>
            </div>

            <div class="mr-auto nav-item form-inline">
                <button type="button" class="btn btn-outline-success" onclick="@("window.location.href='" + @Url.Action("Register", "Home") + "'");">Register</button>
                @if (Session["LoginType"] != null)
                {
                    <button type="button" class="btn btn-outline-success " onclick="@("window.location.href='" + @Url.Action("Logout", "Home") + "'");"> Log Out</button>
                }
                @if (Session["LoginType"] == null)
                {
                <button type="button" class="btn btn-outline-success " onclick="@("window.location.href='" + @Url.Action("Login", "Home") + "'");">Login</button>
                }
            </div>

            


        </div>
        <div class="mr-auto nav-item form-inline">

            
            @*<button class="btn btn-outline-success"  onclick="@("window.location.href='" + @Url.Action("OrderNow", "ShoppingCart") + "'");">
                <img src="~/Image/cart2.png" style="width:25px; height:25px" />
                <span class="badge badge-pill badge-light">9</span>
                <span class="sr-only">unread messages</span>

            </button>*@

        </div>

    </nav>

    <div id="demo2" class="collapse">""
        <div class="jumbotron jumbotron-fluid" style="background-color: #bec0c4; ">
            <div class="container">

                <div style=" float: left; margin-left: 2%">
                    <h4>Address</h4>
                    <p>Dhanmondi, Dhaka</p>
                </div>

                <div style="float:right; margin-right:2%">
                    <h4>Contract Us</h4>
                    <a href="#">Email Us</a>


                </div>
            </div>

        </div>

    </div>

    <br />
    <div class="container-fluid" >
        @RenderBody()
    </div>



    <hr />
    <div class="jumbotron" style="margin-top: 5%; background-color: #bec0c4; ">


        <div style=" float: left; margin-left: 2%">
            <h4>Address</h4>
            <p>Dhanmondi, Dhaka</p>
        </div>

        <div style="float:right; margin-right:2%">
            <h4>Contract Us</h4>
            <a href="#">Email Us</a>


        </div>



    </div>





</body>
</html>
